{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "ignore": ["dist/", "node_modules/"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessLoneBlockStatements": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noDoubleEquals": "warn",
        "noExplicitAny": "off",
        "noGlobalIsNan": "warn",
        "noThenProperty": "off"
      },
      "style": {
        "noInferrableTypes": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "noUnusedTemplateLiteral": "off",
        "useNumberNamespace": "warn",
        "useTemplate": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "lineWidth": 80,
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
